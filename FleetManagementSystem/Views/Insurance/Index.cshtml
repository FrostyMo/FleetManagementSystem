@model PagedResult<FleetManagementSystem.Models.Insurance>

<h1>Insurances</h1>

<a class="btn table-header mb-3" asp-action="Create">Add New Insurance</a>

<input type="text" id="searchInput" class="form-control mb-3" placeholder="Search by Policy Number or Company" />

<div id="insuranceTable">
    <partial name="_InsuranceTablePartial" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('input', function () {
                var query = $(this).val();
                $.ajax({
                    url: '@Url.Action("Search", "Insurance")',
                    type: 'GET',
                    data: { searchString: query },
                    success: function (result) {
                        $('#insuranceTable').html(result);
                    }
                });
            });
        });
    </script>
}