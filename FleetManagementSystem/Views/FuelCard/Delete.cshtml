@model FleetManagementSystem.Models.FuelCard

<h1>Delete Fuel Card</h1>

<!-- Conditional Error Message for Foreign Keys -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <h5 class="alert-heading">Cannot Delete Fuel Card</h5>
        @Html.Raw(ViewBag.ErrorMessage)
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5 class="alert-heading">Are you sure you want to delete this driver?</h5>
        <p>This action cannot be undone. Please confirm if you want to proceed.</p>
    </div>
}
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Fuel Card Number</dt>
            <dd class="col-sm-9">@Model.FuelCardNumber</dd>

            <dt class="col-sm-3">Mileage</dt>
            <dd class="col-sm-9">@Model.Mileage</dd>

            <dt class="col-sm-3">Assigned to</dt>
            <dd class="col-sm-9">@Model.Driver?.FirstName @Model.Driver?.LastName</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>