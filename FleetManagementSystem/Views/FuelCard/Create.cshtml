@model FleetManagementSystem.Models.FuelCard

<div class="card shadow-sm">
    <div class="card-header table-header text-white">
        <h4 class="mb-0">Add Fuel Card</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FuelCardNumber" class="form-label"></label>
                    <input asp-for="FuelCardNumber" class="form-control" placeholder="Enter Fuel Card Number" />
                    <span asp-validation-for="FuelCardNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Mileage" class="form-label"></label>
                    <input asp-for="Mileage" class="form-control" placeholder="Enter Mileage" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="DriverId" class="form-label">Assign Driver</label>
                    <select asp-for="DriverId" class="form-select">
                        @foreach (var driver in ViewBag.DriverList)
                        {
                            <option value="@driver.Value">@driver.Text</option>
                        }
                    </select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn table-header">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}