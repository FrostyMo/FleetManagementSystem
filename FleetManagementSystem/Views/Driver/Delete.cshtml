@model FleetManagementSystem.Models.Driver

<h1 class="mb-4">Delete Driver</h1>

<!-- Conditional Error Message for Foreign Keys -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        <h5 class="alert-heading">Cannot Delete Driver</h5>
        <p>@ViewBag.ErrorMessage</p>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5 class="alert-heading">Are you sure you want to delete this driver?</h5>
        <p>This action cannot be undone. Please confirm if you want to proceed.</p>
    </div>
}

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">License Number</dt>
            <dd class="col-sm-9">@Model.LicenseNumber</dd>

            <dt class="col-sm-3">Date of Birth</dt>
            <dd class="col-sm-9">@Model.DateOfBirth.ToShortDateString()</dd>

            <dt class="col-sm-3">License Expiry</dt>
            <dd class="col-sm-9">@Model.LicenseExpiry.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<!-- Only show the delete button if there is no error -->
@if (string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
}