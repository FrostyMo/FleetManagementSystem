@model FleetManagementSystem.Models.FuelCardDetail

<div class="card shadow-sm">
    <div class="card-header table-header text-white">
        <h4 class="mb-0">Delete Fuel Card Detail</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5 class="alert-heading">Are you sure you want to delete this fuel card detail?</h5>
            <p>This action cannot be undone. Please confirm if you want to proceed.</p>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">Usage (Liters)</dt>
            <dd class="col-sm-9">@Model.Usage</dd>

            <dt class="col-sm-3">Month/Year</dt>
            <dd class="col-sm-9">@Model.Month, @Model.Year</dd>

            <dt class="col-sm-3">Proof of Receipts</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ProofFilePath))
                {
                    <a href="@Url.Content(Model.ProofFilePath)" target="_blank">
                        <i class="fas fa-file-archive"></i> View Proof ZIP
                    </a>
                }
                else
                {
                    <span>No Proof Uploaded</span>
                }
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FuelCardId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" asp-controller="FuelCard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>