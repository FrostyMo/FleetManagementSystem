@model FleetManagementSystem.Models.FuelCardDetail

<div class="card shadow-sm">
    <div class="card-header table-header text-white">
        <h4 class="mb-0">Edit Fuel Card Detail</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FuelCardId" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Usage" class="form-label">Usage (Liters)<span class="text-danger">*</span></label>
                    <input asp-for="Usage" class="form-control" placeholder="Enter Usage in Liters" />
                    <span asp-validation-for="Usage" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProofFilePath">Proof of Receipts (ZIP)</label>

                    @if (!string.IsNullOrEmpty(Model.ProofFilePath))
                    {
                        <div>
                            <a href="@Url.Content(Model.ProofFilePath)" target="_blank">
                                <i class="fas fa-file-archive"></i> View existing ZIP
                            </a>
                        </div>
                    }

                    <input asp-for="ProofFilePath" type="file" class="form-control" name="proofFile" />
                    <span class="text-muted">Leave empty if you don't want to replace the current ZIP proof.</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Month<span class="text-danger">*</span></label>
                    <select asp-for="Month" class="form-select">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Year<span class="text-danger">*</span></label>
                    <select asp-for="Year" class="form-select">
                        @for (int i = DateTime.Now.Year - 10; i <= DateTime.Now.Year; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="Remarks" class="form-label">Remarks</label>
                    <input asp-for="Remarks" class="form-control" placeholder="Used by [name]..." />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn table-header">Save</button>
                <a asp-action="Index" asp-controller="FuelCard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>