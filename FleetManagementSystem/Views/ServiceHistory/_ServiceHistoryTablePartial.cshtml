@model PagedResult<FleetManagementSystem.Models.ServiceHistory>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Cost (£)</th>
            <th>Status</th>
            <th>Vehicle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var history in Model.Items)
        {
            <tr>
                <td>@history.Date.ToString("dd/MM/yyyy")</td>
                <td>@history.Type</td>
                <td>@history.Cost</td>
                <td>@history.Status</td>
                <td>
                    @if (history.Vehicle == null)
                    {
                        <span>Unassigned</span>
                    }
                    else
                    {
                        <a asp-action="Details" asp-controller="Vehicle" asp-route-id="@history.Vehicle.Id">
                            @history.Vehicle.LicensePlate
                        </a>

                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@history.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@history.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}