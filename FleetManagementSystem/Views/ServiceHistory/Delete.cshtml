@model FleetManagementSystem.Models.ServiceHistory

<h1 class="mb-4">Delete Service History</h1>

<div class="alert alert-warning">
    <h5 class="alert-heading">Are you sure you want to delete this service history?</h5>
    <p>This action cannot be undone. Please confirm if you want to proceed.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">@Model.Cost.ToString()</dd>

            <dt class="col-sm-3">Vehicle</dt>
            <dd class="col-sm-9">
                @if (Model.Vehicle != null)
                {
                    @Model.Vehicle.LicensePlate
                }
                else
                {
                    <span>Unassigned</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>