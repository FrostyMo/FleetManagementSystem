@model FleetManagementSystem.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<h1>Vehicle Details</h1>

<div>
    @*<h4>Vehicle</h4>*@
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>
        <dt class="col-sm-2">Manufacturer</dt>
        <dd class="col-sm-10">@Model.Manufacturer</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>
        <dt class="col-sm-2">VIN</dt>
        <dd class="col-sm-10">@Model.VIN</dd>
        <dt class="col-sm-2">Registration Expiry</dt>
        <dd class="col-sm-10">@Model.RegistrationExpiry.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
<div>
    <h3>Service History</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Cost</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.ServiceHistories != null)
            {
                @foreach (var history in @Model.ServiceHistories)
                {
                    <tr>
                        <td>@history.Date.ToString("dd/MM/yyyy")</td>
                        <td>@history.Type</td>
                        <td>@history.Cost</td>
                        <td>@history.Status</td>
                        <td>
                            <!-- Kebab Menu -->
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle" type="button" id="kebabMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i> <!-- Font Awesome for kebab menu -->
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="kebabMenu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-controller="ServiceHistory" asp-route-id="@history.Id">Edit Details</a>
                                    </li>
                                    <li>
                                        @* Status Toggle Based on Current Status *@
                                        @if (history.Status == "Pending")
                                        {
                                            <form method="post" asp-action="UpdateStatusToReimbursed" asp-controller="ServiceHistory" asp-route-id="@history.Id">
                                                <button type="submit" class="dropdown-item">Update Status to Reimbursed</button>
                                            </form>
                                        }
                                        else if (history.Status == "Reimbursed")
                                        {
                                            <form method="post" asp-action="UpdateStatusToPending" asp-controller="ServiceHistory" asp-route-id="@history.Id">
                                                <button type="submit" class="dropdown-item">Update Status to Pending</button>
                                            </form>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <!-- Pagination Controls -->
    @if (ViewBag.ServiceHistories.TotalPages > 1)
    {
    <nav>
        <ul class="pagination">
            @for (var i = 1; i <= ViewBag.ServiceHistories.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.ServiceHistories.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Details" asp-route-id="@Model.Id" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
    }
</div>
