@model FleetManagementSystem.Models.Mileage

<h1>Delete Mileage</h1>

<div>
    <h4>Are you sure you want to delete this mileage?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Total Mileage
        </dt>
        <dd class="col-sm-10">
            @Model.TotalMileage
        </dd>
        <dt class="col-sm-2">
            Proof
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrEmpty(Model.ProofFilePath))
            {
                <span>Missing</span>
            }
            else
            {
                <a href="@Model.ProofFilePath" target="_blank">
                    <i class="fas fa-image"></i> <!-- Image icon -->
                </a>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="VehicleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-controller="Vehicle" asp-route-id="@Model.VehicleId" class="btn btn-secondary">Cancel</a>
    </form>
</div>