@model FleetManagementSystem.Models.Mileage

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Delete Mileage</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5 class="alert-heading">Are you sure you want to delete this mileage record?</h5>
            <p>This action cannot be undone. Please confirm if you want to proceed.</p>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Total Mileage</dt>
            <dd class="col-sm-9">@Model.TotalMileage</dd>

            <dt class="col-sm-3">Proof</dt>
            <dd class="col-sm-9">
                @if (string.IsNullOrEmpty(Model.ProofFilePath))
                {
                    <span class="text-danger">Missing</span>
                }
                else
                {
                    <a href="@Model.ProofFilePath" target="_blank">
                        <i class="fas fa-image"></i> View proof
                    </a>
                }
            </dd>
            <dt class="col-sm-3">Vehicle</dt>
            <dd class="col-sm-9">
                @if (Model.Vehicle != null)
                {
                    @Model.Vehicle.LicensePlate
                }
                else
                {
                    <span>Unassigned</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>